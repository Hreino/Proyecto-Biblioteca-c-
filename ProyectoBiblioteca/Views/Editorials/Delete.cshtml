@model ProyectoBiblioteca.Models.Editorial

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-danger">¿Eliminar Editorial?</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt class="colortitulo">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt class="colortitulo">
            @Html.DisplayNameFor(model => model.Pais)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pais)
        </dd>

        <dt class="colortitulo">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Direccion)
        </dd>

        <dt class="colortitulo">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefono)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">


            @*Botón de Eliminar*@
            <button type="submit" style="background-color:rgba(255, 106, 0, 0.75); " title="Eliminar Editorial" class="btn-lg col-xs-offset-1 col-xs-2 far fas fa-trash"></button>
            <br /><br /><br />
            <button class="btn btn-lg btn-primary" title="Regresar al Listado">
                @Html.ActionLink("   ", "Index", null, new { @class = "fas fa-chevron-circle-left" })
            </button>
            @*Botón de Eliminar*@

        </div>

        @*Div de Notificacion al eliminar*@
        <h3 class="text-danger">
            <span style="background-color:rgba(255, 0, 0, 0.05)">@ViewBag.ErrorEliminar</span>
        </h3>
        @*Div de Notificacion al eliminar*@
    }
</div>
