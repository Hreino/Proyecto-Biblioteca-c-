@model IEnumerable<ProyectoBiblioteca.Models.Devoluciones>

@{
    ViewBag.Title = "Index";
}

<h2 class="colortitulo">Listado de devoluciones</h2>

@*Estilo del Botón Agregar Nuevo*@
<button class="btn-lg btn-primary" title="Nueva devolución">
    @Html.ActionLink("  ", "Create", null, new { @class = "fas fa-exchange-alt" })

</button>
@*Estilo del Botón Agregar Nuevo*@

<table class="table jumbotron table-bordered text-center table-hover ">
    <tr class="info">
        <th class="text-center">ID</th>
        <th class="text-center">
            Fecha de devolución
        </th>
        <th class="text-center">
            Observaciones
        </th>
        <th class="text-center">
           Estado
        </th>
        <th class="text-center"> Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id_devoluciones)</td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDevolucion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prestamo.Estado)
            </td>
            <td>
                @*Estilo de los Botones*@
                <button class="btn-lg btn-info" style="color:white" title="Editar Devolucion">
                    @Html.ActionLink(" ", "Edit", new { id = item.Id_devoluciones }, new { @class = "far fa-edit" })
                </button>
                <button class="btn-lg btn-success" title="Información de la Devolución">
                    @Html.ActionLink("   ", "Details", new { id = item.Id_devoluciones }, new { @class = "fas fa-info-circle" })
                </button>
                <button class="btn-lg" style="background-color:rgba(255, 106, 0, 0.75);" title="Eliminar Devolución">
                    @Html.ActionLink("   ", "Delete", new { id = item.Id_devoluciones }, new { @class = "fas fa-trash" })
                </button>
                @*Estilo de los Botones*@
            </td>
        </tr>
    }

</table>
