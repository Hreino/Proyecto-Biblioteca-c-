@model IEnumerable<ProyectoBiblioteca.Models.Cliente>

@{
    ViewBag.Title = "Index";
}
<br /><br />
<h2 class="colortitulo">Listado de Clientes</h2>
@*<h3 class="text-danger">@ViewBag.ErrorEliminar</h3>*@

@*Estilo del Botón Agregar Nuevo*@
<button class="btn-lg btn-primary" title="Agregar nueva categoria">
    @Html.ActionLink("  ", "Create", null, new { @class = "fas fa-user-tie" })
</button>
@*Estilo del Botón Agregar Nuevo*@

@*Animacion del Textbox*@
<script>
    $(document).ready(function () {

        $("#s").click(function () {
            $("#e").toggle();
        })
    });
</script>
@*Animacion del Textbox*@

@*Comienzo de busqueda*@
@using (Ajax.BeginForm("busqueda2", new AjaxOptions()
{
    HttpMethod = "POST",
    UpdateTargetId = "busqcliente"
}))
{

    <br />
    <div class="row">

        <div class="col-md-12">
            <input style="width:200px; height:35px; border-style:groove;background-color:none" type="text" id="e" name="m" placeholder="Nombre del Cliente" />
            <button Class="btn btn-lg btn-primary fas fa-search " type="submit" id="s" ;" name="" title="Buscar Categoria"></button>
        </div>
    </div>
}
@*Fin de busqueda*@

<div id="busqcliente">
    <table class="table jumbotron table-bordered text-center table-hover">
        <tr class="info">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th class="text-center">
                Apellidos
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th> Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @*Estilo de los Botones*@
                    <button class="btn-lg btn-info" style="color:white" title="Editar Cliente">
                        @Html.ActionLink(" ", "Edit", new { id = item.Id_cliente }, new { @class = "far fa-edit" })
                    </button>
                    <button class="btn-lg btn-success" title="Información de la Cliente">
                        @Html.ActionLink("   ", "Details", new { id = item.Id_cliente }, new { @class = "fas fa-info-circle" })
                    </button>
                    <button class="btn-lg" style="background-color:rgba(255, 106, 0, 0.75);" title="Eliminar Cliente">
                        @Html.ActionLink("   ", "Delete", new { id = item.Id_cliente }, new { @class = "fas fa-trash" })
                    </button>
                    @*Estilo de los Botones*@
                </td>
            </tr>
        }

    </table>

</div>
